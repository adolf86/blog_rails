<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <b>Comenter:</b>
    <%= comment.author %>
    <b>Email:</b>
    <%= comment.email %>
    <b>Content</b>
    <%= comment.content %>
  </p>
<% end %> 
<h2> Add a comment:</h2>
  <%= form_for([@post, @post.comments.build]) do |f| %> 
    <div class="author">
      <%= f.label :author %><br /> 
      <%= f.text_field :author %>
    </div>
    <div class="email">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="content">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>
    <div class="submit">
      <%= f.submit 'Comment' %>
    </div>
  <% end %> 

<br />
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
