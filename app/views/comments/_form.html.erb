<%= form_for([@post,@post.comments.build]) do |f| %>
  <div>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div>
    <%= f.label :email %><br />
    <%= f.text_field :email %><br />
  </div>
  <div>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>


