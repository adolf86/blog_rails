<%= form_for([@post, @post.comments.build]) do |f| %> 
  <div class="author">
  <%= f.label :author %><br /> 
  <%= f.text_field :author %>
  </div>
  <div class="email">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="content">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="submit">
    <%= f.submit 'Comment' %>
  </div>
<% end %> 
